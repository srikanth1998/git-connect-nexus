
{
  "manifest_version": 3,
  "name": "InterviewAce Voice Capture",
  "version": "1.0.0",
  "description": "Capture audio from video meetings for AI interview assistance",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://zoom.us/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://*.webex.com/*",
    "https://*.lovable.app/*",
    "http://localhost:*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://*.webex.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "InterviewAce Voice Capture"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
