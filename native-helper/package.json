
{
  "name": "interviewace-native-helper",
  "version": "1.0.0",
  "description": "Native audio capture helper for InterviewAce",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron dist/main.js",
    "dev": "npm run build && npm start",
    "build": "tsc && npm run build:native && webpack",
    "build:native": "node-gyp rebuild",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "pack": "electron-builder --dir",
    "install:deps": "npm run install:opus",
    "install:opus": "node scripts/install-opus.js"
  },
  "build": {
    "appId": "com.interviewace.helper",
    "productName": "InterviewAce Helper",
    "directories": {
      "output": "releases"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "build/Release/*.node"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/electron": "^1.6.10",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "node-gyp": "^10.0.0",
    "nan": "^2.18.0"
  },
  "dependencies": {
    "ws": "^8.14.0",
    "@types/ws": "^8.5.0"
  }
}
